@top Program { expression* }

@skip { space }

expression {
  Addition |
  Deletion |
  Substitution |
  Comment |
  Highlight
}

@tokens {
  Addition {
    "{++" string "++}"
  }
  Deletion {
    "{--" string "--}"
  }
  Substitution {
    "{~~" string "~>" string "~~}"
  }
  Comment {
    "{>>" string "<<}"
  }
  Highlight {
    "{==" string "==}" Comment?
  }

  string { char* }
  space { std.whitespace+ }

}

@detectDelim
